@model IndexViewModel

<h2>Session-Demo</h2>

<p><strong>Aktueller Session-Wert:</strong> <span style="color:red">@(Model.Name)</span> </p>

<form asp-action="Speichern" method="post">
	<label>Neuer Name:</label>
	<input asp-for="Name" type="text" />
	<select asp-for="Colors">
			<option>White</option>
			<option>Red</option>
			<option>Green</option>
			<option>Blue</option>
		
	</select>
	<button type="submit">Speichern</button>
</form>

<button type="button" onclick="location='@Url.ActionLink("Loeschen")'">Session-Wert löschen</button>
